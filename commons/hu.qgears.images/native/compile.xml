<project name="generate" default="make-c" basedir=".">
	<description>
		Compile native library.
		Dependencies:
		libavcodec libavformat libswscale
	</description>
	<property environment="env"/>
	<target name="make-c" depends="jnigen">
		<exec dir="./devIL/linux" executable="make"/>
		<exec dir="./libpng/linux" executable="make"/>
		<exec dir="./tiff/linux" executable="make"/>
<!-- TODO fix windows binary	<exec dir="./devIL/windows" executable="make"/> -->
	</target>
	<target name="jnigen">
		<mkdir dir="generated"/>
		<javah class="hu.qgears.images.devil.NativeDevIL"
			classpath="../bin:${env.QGEARSDEPS}"
			destdir="./devIL"
			/>
		<javah class="hu.qgears.images.libpng.NativeLibPng"
			classpath="../bin:${env.QGEARSDEPS}"
			destdir="./libpng"
			/>
	 	<javah class="hu.qgears.images.tiff.NativeTiffLoader"
			classpath="../bin:${env.QGEARSDEPS}"
			destdir="./tiff/jni"
			/> 
	 	<javah class="hu.qgears.images.tiff.ImageData"
			classpath="../bin:${env.QGEARSDEPS}"
			destdir="./tiff/jni"
			/> 
	</target>
</project>
